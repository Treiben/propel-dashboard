{
    "Logging": {
        "LogLevel": {
            "Default": "Debug",
            "Microsoft.AspNetCore": "Warning",
            "Microsoft.EntityFrameworkCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "ConnectionStrings": {
        //"SqlConnection": "Server=sqlserver,1433;Database=PropelFeatureFlags;User Id=sa;Password=Propel_Password123!;TrustServerCertificate=True", -- For SQL Server
        "SqlConnection": "Host=postgres;Port=5432;Database=propel_feature_flags;Search Path=development;Username=propel_user;Password=propel_password;Include Error Detail=true", // For PostgreSQL
        "RedisConnection": "redis:6379"
    },
    "AllowFlagsUpdateInRedis": true,
    "RunMigrations": true,
    "SeedDefaultAdmin": true,
    "CORS_ALLOWED_ORIGINS": "http://localhost:3000, http://localhost:5173, http://localhost:80",
    "CORS_ALLOW_ALL": false,
    "Jwt": {
        "Secret": "propel-dashboard-dev-secret-key-change-in-production-minimum-32-characters",
        "Issuer": "propel-dashboard",
        "Audience": "propel-dashboard-api",
        "ExpirationMinutes": 1440
    }
}

