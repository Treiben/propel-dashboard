# Propel Feature Flags Dashboard - Environment Variables
# Copy this file to .env and customize as needed
# ALL VARIABLES ARE OPTIONAL - defaults are provided in docker-compose.release.yml

# Database Configuration (PostgreSQL)
POSTGRES_DB=propel_feature_flags
POSTGRES_USER=propel_user
POSTGRES_PASSWORD=propel_password
POSTGRES_PORT=5432

# Database Configuration (SQL Server - uncomment if using SQL Server)
# MSSQL_SA_PASSWORD=Propel_Password123!
# SQLSERVER_PORT=1433

# Redis Configuration (optional - only needed if ALLOW_FLAGS_UPDATE_IN_REDIS=true)
ALLOW_FLAGS_UPDATE_IN_REDIS=false
REDIS_CONNECTION=redis:6379
REDIS_PORT=6379
REDIS_MAX_MEMORY=256mb

# JWT Configuration (auto-generated if not provided, but recommended to set for production)
JWT_SECRET=your-secret-key-minimum-32-characters-long-change-this
JWT_ISSUER=propel-dashboard
JWT_AUDIENCE=propel-dashboard-api
JWT_EXPIRATION_MINUTES=1440

# Admin Configuration
SEED_DEFAULT_ADMIN=true
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=changeme

# Database Migration
RUN_MIGRATIONS=true

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000
CORS_ALLOW_ALL=false

# Dashboard Configuration
DASHBOARD_PORT=8080
ASPNETCORE_ENVIRONMENT=Production